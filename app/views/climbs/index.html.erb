<div
  id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="filter-burger">
  <button type="button" data-toggle="modal" data-target="#myModal"><i class="fas fa-filter">
  </button>
</div>


<!-- Modal -->
<div class="modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Filter Options</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div>

      <%= form_tag root_path, method: :get do %>
      <h6>Climb Status:
      <%= check_box_tag 'status[]', 'IN',
          params[:status] %>
          <label>IN</label>
      <%= check_box_tag 'status[]', 'not IN',
          params[:status] %>
          <label>not IN</label>
      <%= check_box_tag 'status[]', 'Sketchy',
          params[:status] %>
          <label>Sketchy</label>
      <%= check_box_tag 'status[]', 'Status Unknown',
          params[:status] %>
          <label>Unknown</label>
          <div class="modal-footer">
            <%= submit_tag "Cancel", 'data-dismiss': "modal", class: "btn btn-secondary" %>
            <%= submit_tag "Filter", class: "btn btn-dark" %>
            </h6>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
<h4 class="mt-2">Add new trip report here:</h4>
  <%= simple_form_for(@trip_report) do |f| %>
    <%= f.association :climb, collection: Climb.all  %>
    <%= f.input :status, collection: TripReport::STATUS %>
    <%= f.input :content %>
    <%= f.input :date %>
    <%= f.input :user, as: :hidden, default: current_user %>
    <%= f.input :photo, as: :file, :folder => "ice" %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Post a trip report", class:"btn btn-dark w-100" %>
  <% end %>
</div>
